<div class="deal-info">
  <h3><%= deal.headline %>  
    <% if deal.probably_expired? %>
      <br><span class='warning'>POSSIBLY EXPIRED!</span>
    <% end %>
  <%= sanitize instructions_for(deal) %>
  </h3>
  <p><%= sanitize deal.description %></p>
</div>

<div class="deal-stats">
  <p>
    <b>Fly From:</b><br>
    <%= sanitize airport_codes(deal.origins) %>
  </p>
  <p>
    <b>Fly To:</b><br>
    <%= sanitize airport_codes(deal.destinations) %>
  </p>
  <p>
    <b>Fly Dates:</b><br>
    <%= brief_time(deal.start_date) %> - <%= brief_time(deal.end_date) %>
  </p>
</div>
