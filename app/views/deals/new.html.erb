<%= form_for @deal do |f| %>
<table>
<tr>
  <p><%= f.label :headline  %><br>
  <%= f.text_field :headline %></p>
  
  <p><%= f.label :description %> <br>
  <%= f.text_area :description %></p>

  <p><%= f.label :instructions %> <br>
  <%= f.text_area :instructions %></p>
</tr>
<tr>
  <td><p>
  <%= label_tag :origin, 'Origin airports: (ex. "DCA, BWI, IAD")' %> <br>
  (origin text field)
  </p></td>
  <td><p>
  <%= label_tag :destination, 'Destination airports: (ex. "DCA, BWI, IAD")' %> <br>
  (destination text field)
  </p></td>
</tr>
</table>



<% end %>